@model EBuy.Models.RegisterModel

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@Resources.PageLanguage.HintCreateAccount</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div>
        <ul>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ValidateCode)
                @Html.TextBoxFor(m => m.ValidateCode)
                @Html.Partial("_GetValidateCodePartial")
            </li>
        </ul>
        <input type="submit" value="@Resources.PageLanguage.BtnRegister" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
